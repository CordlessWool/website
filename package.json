{
	"name": "website",
	"module": "main.ts",
	"type": "commonjs",
	"scripts": {
		"build": "eleventy",
		"watch": "eleventy --watch",
		"watch:css": "tailwindcss -i ./src/base.css -o ./_site/base.css --watch",
		"watch:ts": "bun build ./src/main.ts --outfile=./_site/assets/main.js --watch",
		"start": "eleventy --serve"
	},
	"devDependencies": {
		"@11ty/eleventy": "^3.0.0-alpha.5",
		"@11ty/eleventy-img": "^4.0.2",
		"@types/bun": "latest",
		"eleventy-plugin-i18n": "^0.1.3",
		"tailwindcss": "^3.4.3"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	},
	"dependencies": {}
}
