{
  "inlcude": ["."],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    // Base configuration
    "baseUrl": ".",
    "paths": {
      "$layout/*": ["./__layout/*"],
      "$embodi/*": [
        "./node_modules/embodi/dist/core/vite/virtual-modules/embodi/*"
      ]
    },
    // Enable latest features
    "lib": ["ESNext", "DOM"],
    "target": "ES2022",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,
    "declaration": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": false
  }
}
